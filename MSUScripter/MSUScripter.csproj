<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net7.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        <Version>1.0.0-rc.3</Version>
        <PackageIcon>MSUScripterIcon.ico</PackageIcon>
        <ApplicationIcon>MSUScripterIcon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FlacLibSharp" Version="3.2.1" />
      <PackageReference Include="ID3" Version="0.6.0" />
      <PackageReference Include="MahApps.Metro.IconPacks.FontAwesome" Version="4.11.0" />
      <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="4.11.0" />
      <PackageReference Include="MattEqualsCoder.GitHubReleaseChecker" Version="1.0.0" />
      <PackageReference Include="MattEqualsCoder.MSURandomizer.Library" Version="0.9.8" />
      <PackageReference Include="Microsoft-WindowsAPICodePack-Shell" Version="1.1.5" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0-preview.6.23329.7" />
      <PackageReference Include="NAudio" Version="2.1.0" />
      <PackageReference Include="NJsonSchema.CodeGeneration.CSharp" Version="10.9.0" />
      <PackageReference Include="NReco.Logging.File" Version="1.1.6" />
      <PackageReference Include="System.IO.FileSystem.Primitives" Version="4.3.0" />
      <PackageReference Include="System.Text.Encoding.Extensions" Version="4.3.0" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="msu-randomizer-settings.yaml" />
      <EmbeddedResource Include="msu-randomizer-settings.yaml" />
    </ItemGroup>

    <ItemGroup>
      <Page Update="UI\Generic.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <None Remove="MSUScripterIcon.ico" />
      <Resource Include="MSUScripterIcon.ico" />
    </ItemGroup>

</Project>
