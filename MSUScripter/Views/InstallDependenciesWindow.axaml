<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AvaloniaControls.Controls;assembly=AvaloniaControls"
        xmlns:viewModels="clr-namespace:MSUScripter.ViewModels"
        xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="220"
        Width="550" Height="220"
        SizeToContent="Height"
        x:Class="MSUScripter.Views.InstallDependenciesWindow"
        WindowStartupLocation="CenterOwner"
        Title="Missing Dependencies"
        Loaded="Control_OnLoaded"
        x:DataType="viewModels:InstallDependenciesWindowViewModel">
    <LayoutTransformControl Name="MainLayout">
        <DockPanel>
            <controls:HeaderFooter DockPanel.Dock="Bottom">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Click="CloseButton_OnClick">
                        Close
                    </Button>
                </StackPanel>
            </controls:HeaderFooter>
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock>You are missing one or more dependencies which are required for full functionality.</TextBlock>
                <Border 
                    Margin="0 10 0 0"
                    BorderThickness="2" 
                    CornerRadius="5"
                    Background="{DynamicResource CardBackgroundColor}"
                    BorderBrush="{DynamicResource CardBorderColor}"
                >
                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto, Auto, Auto">
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="10" ToolTip.Tip="Required for generating the PCM audio files for MSUs.">
                            <controls:LinkControl 
                                Margin="0 0 5 0" 
                                Tag="https://github.com/qwertymodo/msupcmplusplus"
                                Click="LinkControlOpenTagButton_OnClick"
                            >
                                MsuPcm++
                            </controls:LinkControl>
                            <avalonia:MaterialIcon Kind="InfoCircle"/>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Margin="5"
                            IsVisible="{Binding ShowInstallMsuPcmButton}"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                        >
                            <Button 
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="InstallMsuPcmButton_OnClick"
                            >
                                Install MsuPcm++
                            </Button>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RevalidateMsuPcmButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="0" 
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="5" 
                            IsVisible="{Binding ShowMsuPcmVerifiedText}"
                        >
                            <avalonia:MaterialIcon Kind="CheckBold" Foreground="LimeGreen" Margin="0 0 3 0"/>
                            <TextBlock VerticalAlignment="Center" Foreground="LimeGreen">Verified</TextBlock>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Margin="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            IsVisible="{Binding ShowMsuPcmProgress}"
                        >
                            <TextBlock VerticalAlignment="Center" Text="{Binding MsuPcmInstallProgress}" Margin="0 0 10 0" />
                            <avaloniaProgressRing:ProgressRing 
                                Width="20" 
                                Height="20"
                                IsActive="True"
                                VerticalAlignment="Center"
                                Foreground="DodgerBlue" 
                            />
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="0" 
                            Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="5"
                            IsVisible="{Binding ShowMsuPcmError}"
                        >
                            <controls:LinkControl 
                                Foreground="IndianRed"
                                Background="Transparent"
                                Tag="https://github.com/MattEqualsCoder/MSUScripter/blob/main/Docs/install.md"
                                Click="LinkControlOpenTagButton_OnClick"
                                VerticalAlignment="Center"
                                ToolTip.Tip="{Binding MsuPcmErrorToolTip}"
                            >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock TextDecorations="Underline" Margin="5 0" Text="{Binding MsuPcmErrorText}" />
                                    <avalonia:MaterialIcon Kind="OpenInNew" Background="Transparent" />
                                </StackPanel>
                            </controls:LinkControl>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RetryMsuPcmButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        
                        
                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Height="2" Background="{DynamicResource CardBorderColor}" />
                        
                        <StackPanel 
                            Grid.Row="2" 
                            Grid.Column="0" 
                            Orientation="Horizontal" 
                            Margin="10" 
                            ToolTip.Tip="Required for the Python Companion App."
                        >
                            <controls:LinkControl 
                                Margin="0 0 5 0"
                                Tag="https://www.ffmpeg.org"
                                Click="LinkControlOpenTagButton_OnClick"
                            >
                                FFmpeg
                            </controls:LinkControl>
                            <avalonia:MaterialIcon Kind="InfoCircle"/>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2" 
                            Grid.Column="1" 
                            Margin="5"
                            IsVisible="{Binding ShowInstallFfmpegButton}"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                        >
                            <Button 
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="InstallFfmpegButton_OnClick"
                            >
                                Install FFmpeg
                            </Button>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RevalidateFfmpegButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="5" 
                            IsVisible="{Binding ShowFfmpegVerifiedText}"
                        >
                            <avalonia:MaterialIcon Kind="CheckBold" Foreground="LimeGreen" Margin="0 0 3 0"/>
                            <TextBlock VerticalAlignment="Center" Foreground="LimeGreen">Verified</TextBlock>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="1" 
                            Margin="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            IsVisible="{Binding ShowFfmpegProgress}"
                        >
                            <TextBlock VerticalAlignment="Center" Text="{Binding FfmpegInstallProgress}" Margin="0 0 10 0" />
                            <avaloniaProgressRing:ProgressRing 
                                Width="20" 
                                Height="20"
                                IsActive="True"
                                VerticalAlignment="Center"
                                Foreground="DodgerBlue" 
                            />
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="5"
                            IsVisible="{Binding ShowFfmpegError}"
                        >
                            <controls:LinkControl 
                                Foreground="IndianRed"
                                Background="Transparent"
                                Tag="https://github.com/MattEqualsCoder/MSUScripter/blob/main/Docs/install.md#python-companion-app"
                                Click="LinkControlOpenTagButton_OnClick"
                                VerticalAlignment="Center"
                                ToolTip.Tip="{Binding FfmpegErrorToolTip}"
                            >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock TextDecorations="Underline" Margin="5 0" Text="{Binding FfmpegErrorText}" />
                                    <avalonia:MaterialIcon Kind="OpenInNew" Background="Transparent" />
                                </StackPanel>
                            </controls:LinkControl>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RetryFfmpegButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        
                        
                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="2" Background="{DynamicResource CardBorderColor}" />
                        
                        <StackPanel 
                            Grid.Row="4" 
                            Grid.Column="0" 
                            Orientation="Horizontal" 
                            Margin="10" 
                            ToolTip.Tip="Required for PyMusicLooper and creating videos for testing YouTube copyright strikes."
                        >
                            <controls:LinkControl 
                                Margin="0 0 5 0"
                                Tag="https://github.com/MattEqualsCoder/MSUScripter/blob/main/Docs/install.md#python-companion-app"
                                Click="LinkControlOpenTagButton_OnClick"
                            >
                                Python Companion App
                            </controls:LinkControl>
                            <avalonia:MaterialIcon Kind="InfoCircle"/>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="4" 
                            Grid.Column="1" 
                            Margin="5"
                            IsVisible="{Binding ShowInstallPyAppButton}"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                        >
                            <Button 
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="InstallPyAppButton_OnClick"
                            >
                                Install Companion App
                            </Button>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RevalidatePyAppButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="4" 
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="5" 
                            IsVisible="{Binding ShowPyAppVerifiedText}"
                        >
                            <avalonia:MaterialIcon Kind="CheckBold" Foreground="LimeGreen" Margin="0 0 3 0"/>
                            <TextBlock VerticalAlignment="Center" Foreground="LimeGreen">Verified</TextBlock>
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="4" 
                            Grid.Column="1" 
                            Margin="5" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            IsVisible="{Binding ShowPyAppProgress}"
                        >
                            <TextBlock VerticalAlignment="Center" Text="{Binding PyAppInstallProgress}" Margin="0 0 10 0" />
                            <avaloniaProgressRing:ProgressRing 
                                Width="20" 
                                Height="20"
                                IsActive="True"
                                VerticalAlignment="Center"
                                Foreground="DodgerBlue" 
                            />
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="4" 
                            Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="5"
                            IsVisible="{Binding ShowPyAppError}"
                        >
                            <controls:LinkControl 
                                Foreground="IndianRed"
                                Background="Transparent"
                                Tag="https://github.com/MattEqualsCoder/MSUScripter/blob/main/Docs/install.md#python-companion-app"
                                Click="LinkControlOpenTagButton_OnClick"
                                VerticalAlignment="Center"
                                ToolTip.Tip="{Binding PyAppErrorToolTip}"
                            >
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock TextDecorations="Underline" Margin="5 0" Text="{Binding PyAppErrorText}" />
                                    <avalonia:MaterialIcon Kind="OpenInNew" Background="Transparent" />
                                </StackPanel>
                            </controls:LinkControl>
                            <Button 
                                Margin="5 0 0 0" 
                                ToolTip.Tip="Retry" 
                                IsEnabled="{Binding CanClickInstallButton}"
                                Click="RetryPyAppButton_OnClick"
                            >
                                <avalonia:MaterialIcon Kind="Refresh" />
                            </Button>
                        </StackPanel>
                        
                    </Grid>
                    
                </Border>
                <controls:IconCheckbox
                    Margin="0 5 5 0"
                    HorizontalAlignment="Right"
                    Text="I'm only using the MSU Scripter for YAML files (don't show me this again)"
                    AllowNulls="False"
                    Value="{Binding DontRemindMeAgain, Mode=TwoWay}"
                />
            </StackPanel>
        </DockPanel>
    </LayoutTransformControl>
</Window>
