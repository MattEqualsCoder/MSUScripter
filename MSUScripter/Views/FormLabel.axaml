<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:AvaloniaControls.Controls;assembly=AvaloniaControls"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Name="ThisControl"
             x:Class="MSUScripter.Views.FormLabel">
    <Grid
        ColumnDefinitions="Auto, *"
        VerticalAlignment="Top"
        ToolTip.Tip="{Binding ElementName=ThisControl, Path=AbbreviatedToolTip}"
    >
        <TextBlock Grid.Column="0" Text="{Binding ElementName=ThisControl, Path=LabelText}" TextTrimming="CharacterEllipsis" />
        <controls:ImageButton
            Grid.Column="1"
            IsVisible="{Binding ElementName=ThisControl, Path=DisplayToolTipIcon}" 
            IsEnabled="{Binding ElementName=ThisControl, Path=CanClickToolTipIcon}"
            HorizontalAlignment="Left"
        >
            <Button.Flyout>
                <Flyout Placement="Top">
                    <TextBlock Text="{Binding ElementName=ThisControl, Path=ToolTipText}" TextWrapping="Wrap" MaxWidth="500"/>
                </Flyout>
            </Button.Flyout>
            <avalonia:MaterialIcon Kind="QuestionMarkCircle" Width="12" Margin="5 -1 0 0"/>
        </controls:ImageButton>
    </Grid>
</UserControl>
